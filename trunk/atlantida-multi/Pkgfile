	http://downloads.sourceforge.net/xdxf/comn_dictd03_web1913.tar.bz2 \
	http://downloads.sourceforge.net/xdxf/comn_dictd03_ushakov.tar.bz2 \
        http://downloads.sourceforge.net/xdxf/comn_sdict05_brokg.tar.bz2 \
