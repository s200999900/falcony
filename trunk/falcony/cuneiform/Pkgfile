# Description: Cuneiform for Linux is an multi-language OCR system
# URL: https://launchpad.net/cuneiform-linux
# Maintainer: Falcony, falcony at users dot sourceforge dot net
# Packager: Falcony, falcony at users dot sourceforge dot net	
# Depends on: 
# Nice to have: imagemagick to recognize not only *.bmp files but other images

name=cuneiform
version=0.2
release=1
source=(http://launchpad.net/cuneiform-linux/$version/$version/+download/$name-$version.tar.bz2 \
	qocr README README.RUS)

build() {

        if [ -e /usr/share/cuneiform  ]; then
        echo  "Found /usr/share/cuneiform directory used in previous intallation."
        echo  "To rebuilding this directory has to be removed. Removing..."
        rm -r /usr/share/cuneiform
        else
        echo
        fi
        cd /usr/share/ ; tar -xjpf /usr/ports/falcony/cuneiform/$name-$version.tar.bz2
        mv $name-$version $name ; cd $name ; mkdir qocr ; cd qocr
        cmake .. ; make
        mkdir $PKG/usr
        mkdir -p $PKG/usr/bin
        mkdir $PKG/usr/share        
        install -m0755 $SRC/qocr $PKG/usr/bin
        cd ../ ; chown -R root:users qocr ; chmod -R 775 qocr 
        cd ../
        cp -RLp $name $PKG/usr/share/
        mkdir -p $PKG/usr/doc
        mkdir -p $PKG/usr/doc/$name
        cp $SRC/README.RUS $PKG/usr/doc/$name
        cp $SRC/README $PKG/usr/doc/$name
        rm -r /usr/share/cuneiform
}
